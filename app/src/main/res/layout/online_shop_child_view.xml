<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/home_service_recycler_child_view_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:clickable="true"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        card_view:paddingEnd="10dp"
        card_view:paddingStart="10dp"
        android:layout_margin="3dp"
        card_view:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/product_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/samsung" />

            <TextView
                android:id="@+id/product_name"
                style="@style/DescriptionTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2.5dp"
                android:layout_marginRight="2.5dp"
                android:gravity="center"
                android:text="LG 108cm (43) Full HD LED Smart TV"
                android:textColor="@color/colorText" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/TitleTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\u20B9" />

                <TextView
                    android:id="@+id/discount_price"
                    style="@style/TitleTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="19,500" />

                <TextView
                    style="@style/DescriptionTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="\u20B9"
                    android:textColor="@color/colorText" />

                <TextView
                    android:id="@+id/market_price"
                    style="@style/DescriptionTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/strike_25000_strike"
                    android:textColor="@color/colorText" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.5dp"
                android:layout_marginRight="2.5dp"
                android:layout_gravity="center">

                <TextView
                    style="@style/HighlightedText"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="- "
                    android:textColor="@color/colorBottomNavigationNotification" />

                <TextView
                    android:id="@+id/discount_rate"
                    style="@style/HighlightedText"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="50"
                    android:textColor="@color/colorBottomNavigationNotification" />

                <TextView
                    style="@style/HighlightedText"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=" %"
                    android:textColor="@color/colorBottomNavigationNotification" />
            </LinearLayout>
            <TextView
                android:id="@+id/cardTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Title"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
